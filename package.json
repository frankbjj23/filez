{
  "name": "filez",
  "type": "module",
  "imports": {
    "#*": "./*.js"
  },
  "scripts": {
    "start": "node --env-file=.env server.js",
    "dev": "node --watch --env-file=.env server.js",
    "test": "vitest",
    "test:database": "vitest database",
    "test:server": "vitest server",
    "db:schema": "psql -d filez -f db/schema.sql",
    "db:seed": "node --env-file=.env db/seed.js",
    "db:reset": "npm run db:schema && npm run db:seed"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "supertest": "^7.1.0",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=22"
  },
  "version": "1.0.0",
  "description": "Filez is a next-gen file management platform built for extreme speed and performance.\r Your folders and files have never felt snappier!",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frankbjj23/filez.git"
  },
  "keywords": [],
